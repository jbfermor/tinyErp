<!-- app/views/inventory_movements/index.html.erb -->
<h1>Inventario de Productos</h1>

<%= form_with url: inventory_movements_path, method: :get, local: true do %>
  <div class="mb-3">
    <%= select_tag :supplier_id, options_from_collection_for_select(@suppliers, :id, :commercial_name, params[:supplier_id]), prompt: 'Selecciona un proveedor', class: 'form-control' %>
    <%= submit_tag 'Filtrar', class: 'btn btn-primary mt-2' %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td>
          <%= link_to 'Consulta', consulta_product_inventory_movements_path(product), class: 'btn btn-info' %>
          <%= link_to 'Modificar Inventario', new_product_inventory_movement_path(product), class: 'btn btn-warning' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
