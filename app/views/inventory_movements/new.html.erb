<!-- app/views/inventory_movements/new.html.erb -->
<h1>Modificar Inventario de <%= @product.product_name %></h1>

<%= form_with model: [@product, @inventory_movement], local: true do |form| %>
  <div class="form-group">
    <%= form.label :movement_type, "Tipo de Movimiento" %>
    <%= form.select :movement_type, InventoryMovement.movement_types.keys.map { |type| [type.capitalize, type] }, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= form.label :quantity, "Cantidad" %>
    <%= form.number_field :quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :reason, "Motivo" %>
    <%= form.text_field :reason, class: 'form-control' %>
  </div>

  <%= form.submit "Guardar", class: "btn btn-primary" %>
<% end %>
