<!-- Tabla de clientes -->
  <%= turbo_frame_tag "workers" do %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Apellido 1</th>
          <th>Apellido 2</th>
          <th>Teléfono</th>
          <th>Email</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% if @filtered_workers.any? %>
            <% @filtered_workers.each do |worker| %>
              <td><%= worker.name %></td>
              <td><%= worker.surname1 %></td>
              <td><%= worker.surname2 %></td>
              <td><%= worker.phone %></td>
              <td><%= worker.user.email %></td>
              <td><%= link_to 'Mostrar', worker_path(worker), class: "btn btn-primary btn-sm" %></td>
              <td><%= link_to 'Editar', edit_worker_path(worker), class: "btn btn-warning btn-sm" %></td>
              <td><%= button_to 'Eliminar', worker_path(worker), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
          <% else %>
            <td colspan="8">No se ha econtrado ningúna persona</td>
          <% end %>
        </tr>
      </tbody>
    </table>
  <% end %>