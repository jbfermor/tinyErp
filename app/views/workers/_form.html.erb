
<%= form_with model: @worker, url: user_registration_path(@worker) do |form| %>
  <% if @worker.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Errors:</h4>
      <ul>
        <% @worker.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>

  <h3 class="mt-3">Bio Information</h3>

  <%= form.fields_for :worker_bio, WorkerBio.new do |bio_form| %>
    <div class="form-group">
      <%= bio_form.label "NIF" %>
      <%= bio_form.text_field :nif, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= bio_form.label "Nombre" %>
      <%= bio_form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= bio_form.label "Apellido 1" %>
      <%= bio_form.text_field :surname1, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= bio_form.label "Apellido 2" %>
      <%= bio_form.text_field :surname2, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= bio_form.label "Teléfono" %>
      <%= bio_form.telephone_field :phone, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= bio_form.label "Dirección" %>
      <%= bio_form.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= bio_form.label "Ciudad" %>
      <%= bio_form.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= bio_form.label "Código postal" %>
      <%= bio_form.text_field :postal, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= bio_form.label "Provincia" %>
      <%= bio_form.text_field :province, class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= bio_form.submit "Guardar persona", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>