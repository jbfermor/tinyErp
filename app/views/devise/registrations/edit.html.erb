<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'needs-validation', novalidate: true }) do |f| %>
  <%= devise_error_messages! %>

  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    <div class="form-text">Déjalo en blaco si no quieres cambiarlo</div>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, class: 'form-label' %>
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', required: true %>
    <div class="form-text">Necesitamos tu password actual para aplicar los cambios</div>
  </div>

  <%= f.fields_for :bio, resource.bio || Bio.new do |bio_form| %>
    <div class="mb-3">
      <%= bio_form.label "NIF", class: 'form-label' %>
      <%= bio_form.text_field :nif, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= bio_form.label "Nombre comercial", class: 'form-label' %>
      <%= bio_form.text_field :commercial_name, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= bio_form.label :phone, class: 'form-label' %>
      <%= bio_form.text_field :phone, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= bio_form.label "Dirección", class: 'form-label' %>
      <%= bio_form.text_field :address, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= bio_form.label "Ciudad", class: 'form-label' %>
      <%= bio_form.text_field :city, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= bio_form.label "Código postal", class: 'form-label' %>
      <%= bio_form.text_field :postal_code, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= bio_form.label "Provincia", class: 'form-label' %>
      <%= bio_form.text_field :province, class: 'form-control' %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.submit "Actualizar la información", class: 'btn btn-primary' %>
  </div>
<% end %>
