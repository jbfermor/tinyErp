<%= content_for :page_title, "Product Details" %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between">
      <h3 class="card-title"><%= @product.product_name %></h3>
      <div>
        <%= link_to 'Editar', edit_product_path(@product), class: 'btn btn-warning' %>
        <%= button_to 'Eliminar', product_path(@product), method: :delete, data: { turbo_confirm: '¿Seguro que se desea eliminar este producto?' }, class: 'btn btn-danger' %>
      </div>
    </div>
    <div class="card-body">
      <div class="mb-3">
        <strong>Precio de compra:</strong>
        <p><%= @product.buy_price %> €</p>
      </div>

      <div class="mb-3">
        <strong>Stock:</strong>
        <p><%= @product.stock %></p>
      </div>

      <div class="mb-3">
        <strong>Stock mínimo:</strong>
        <p><%= @product.min_stock %></p>
      </div>

      <div class="mb-3">
        <strong>Precio de venta:</strong>
        <p><%= @product.sell_price %> €</p>
      </div>


      <div class="mb-3">
        <strong>Estado:</strong>
        <p><%= @product.state.humanize %></p>
      </div>

      <div class="mb-3">
        <strong>proveedor:</strong>
        <p><%= link_to @product.supplier.commercial_name, supplier_path(@product.supplier) %></p>
      </div>

    </div>
    <div class="card-footer text-center">
      <%= link_to 'Volver a Productos', products_path, class: 'btn btn-secondary' %>

    </div>
  </div>

  <%= render "products/buys_card" %>
  <%= render "products/deliveries_card" %>
  <%= render "products/sells_card" %>
  <%= render "products/returns_card" %>

 </div>
  
 